<!--pages/rig/rig.wxml-->
<view class="v1" style="height:100%">
 
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext" style="width: 232rpx; height: 92rpx; display: block; box-sizing: border-box; left: 0rpx; top: -2rpx">注册</view>
  
     <!-- 账号 -->
     <view class="phoneCs">
       <image src="../images/account.png" class="ph"></image>
       <input placeholder="请输入账号" type="number" bindinput="username" />
     </view>
     <!-- 密码 -->
     <view class=passwordCs">
       <image src="../images/password.png" class="ps"></image>
       <input placeholder="请输入密码" type="password" bindinput="password" />
     </view>
     <!-- 确认密码 -->
     <view class=passwordCs-again">
       <image src="../images/password.png" class="ps"></image>
       <input placeholder="请输入确认密码" type="password" bindinput="password_again" />
     </view>
     <!-- 注册按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" bindtap="rigester">注册</button>
     </view>
   </view>
 </view>
  


